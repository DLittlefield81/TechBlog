<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{this.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-blog-form" >
      <div class="form-group">
        <label for="blog-name">Post Title:</label>
        <input class="form-input" type="text" id="blog-name" name="post-title" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Post Body:</label>
        <textarea class="form-input" id="blog-desc" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="new-post-form">Create Post</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/new.js"></script>
