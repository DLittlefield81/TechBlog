<div class="posts">
  {{#each posts}}
  <article class="card card-rounded">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{postTitle}}</a>
      </h2>
      <div>
        Posted by {{user.username}} on {{format_date dateCreated}}
      </div>
    </div>
    <div class="card-body">
      {{postContent}}
    </div>
  </article>
  {{/each}}
</div>
