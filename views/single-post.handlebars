<div class="post ">
    <article class="card m-2">
        <div class="card-header flex-row justify-space-between">
            <h2>{{post.postTitle}}</h2>
            <div>
                Posted by {{post.user.username}} on {{format_date post.dateCreated}}
            </div>
        </div>
        <div class="card-body">
            {{post.postContent}}
        </div>
    </article>

    {{#if post.comments}}
    <section class="card m-2">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.comments}}
            <div>
                <p>
                    {{commentContent}}
                </p>
                <p>
                    &mdash; {{user.username}}, {{dateCreated}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card m-2">
        <div class="card-header">
            <h3>Add a Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" id="post-id" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-content">Comment</label>

            <textarea id="comment-content" name="comment-content" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script>